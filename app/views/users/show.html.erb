<h1>My Trips</h1>
<center><img src="@user.image" alt="profile-picture"/></center>

<% if current_user.trips %>
  <span> You have not created any trips yet ğŸ™ ,  let's <%= link_to "create ", new_trip_path %>one! </span>
<% else %>
  <% if current_trip %>
    <% current_trip.each do |trip| %>
  <ul>
  <h3>Current Trip:</h3>
      <li> <%= link_to trip.name, trip_path(trip) %> in <%= trip.location %> from <%= trip.start_date.strftime("%A, %B %e") %> until <%= trip.end_date.strftime("%A, %B %e")%></li> </li>
      <%end %>
    </ul>
  <% end %>

  <h3>Upcoming Trips:</h3>
  <ul>
    <% @trips.where('start_date > ?', Date.today).each do |trip| %>
      <li><%= link_to trip.name, trip_path(trip) %>in <%= trip.location %> from <%= trip.start_date.strftime("%A, %B %e") %> until <%= trip.end_date.strftime("%A, %B %e")%></li>
    <% end %>
  </ul>
  <h3>Past Trips:</h3>

  <ul>
    <% @trips.where('end_date < ?', Date.today).each do |trip| %>
      <li><%= link_to trip.name, trip_path(trip)%> from <%= trip.start_date.strftime("%A, %B %e") %> until <%= trip.end_date.strftime("%A, %B %e")%></li>
    <% end %>
  </ul>
<%end %>
